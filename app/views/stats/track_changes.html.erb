<form class="form-horizontal" action="/tools/track_changes" method="POST">
  <div class="row">
    <div class="col-xs-2">
    </div>
    <div class="col-xs-2">
      <label class="control-label" for="d1_start">start date</label>
    </div>
    <div class="col-xs-2">
      <label class="control-label" for="d1_end">end date</label>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2">first date range:</label>
    <div class="col-xs-2">
      <input type="date" class="form-control" name="d1_start">
    </div>
    <div class="col-xs-2">
      <input type="date" class="form-control" name="d1_end">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="second_date">second date range:</label>
    <div class="col-xs-2">
      <input type="date" class="form-control" name="d2_start">
    </div>
    <div class="col-xs-2">
      <input type="date" class="form-control" name="d2_end">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="phrase_content">
      phrase selection:</label>
    <div class="col-xs-2">
    <%= collection_select(:phrase, :content, Phrase.all, :content, :content,{}, {class:'form-control'}) %>
    </div>
  </div>
</form>
